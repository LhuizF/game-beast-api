// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  points     Int      @default(100)
  id_guild   Int?
  id_discord Int?
  email      String?  @unique
  password   String?
  avatar     String
  created_at DateTime @default(now())

  Guild Guild? @relation(fields: [id_guild], references: [id])
  Bets  Bet[]

  @@map("users")
}

model Guild {
  id         Int      @id @unique
  name       String
  icon       String
  channel    Int
  created_at DateTime @default(now())

  users User[]

  @@map("guilds")
}

model Bet {
  id         Int      @id @default(autoincrement())
  points     Int
  game_time  Int
  status     String   @default("pending")
  created_at DateTime @default(now())
  platform   String

  id_user String
  User    User   @relation(fields: [id_user], references: [id])

  id_beast Int
  Beast    Beast @relation(fields: [id_beast], references: [id])

  @@map("bets")
}

model Beast {
  id        Int    @id
  name      String
  times_win Int    @default(0)

  Bets Bet[]

  @@map("beasts")
}

model LogError {
  id         Int      @id @default(autoincrement())
  stack      String
  created_at DateTime @default(now())

  @@map("log_errors")
}
